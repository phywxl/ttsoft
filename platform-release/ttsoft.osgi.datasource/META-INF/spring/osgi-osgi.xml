<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:osgi="http://www.springframework.org/schema/osgi"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd">

	<osgi:service   id="ttsoft.osgi.datasource.localhost.service"
	                interface="javax.sql.DataSource"
	                ref="ttsoft.osgi.datasource.localhost">
	</osgi:service>

	<osgi:service   id="iDataSource.service"
	                interface="ttsoft.osgi.datasource.expose.IDataSource"
	                ref="iDataSource">
	</osgi:service>
	<osgi:service   id="iTable.service"
	                interface="ttsoft.osgi.datasource.expose.ITable"
	                ref="iTable">
	</osgi:service>
</beans>